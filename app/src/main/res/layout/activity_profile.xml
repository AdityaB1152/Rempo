<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/roboto"
        android:text="Profile Details"
        android:textSize="28sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="5dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/field_lable"
                android:layout_width="120dp"
                android:layout_height="18dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/roboto"
                android:gravity="top"
                android:lineSpacingExtra="3sp"
                android:text="Aadhar Number"
                android:textSize="16sp"
                android:translationY="-1.69sp" />

            <TextView
                android:id="@+id/aadharfield"
                android:layout_width="283dp"
                android:layout_height="40dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/rectangle"
                android:fontFamily="@font/roboto"
                android:gravity="center_vertical"
                android:paddingStart="20dp"
                android:text="1234-5678-9000"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/field_lable2"
                android:layout_width="165dp"
                android:layout_height="18dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/roboto"
                android:gravity="top"
                android:lineSpacingExtra="3sp"
                android:text="Name (as on Aadhar)"
                android:textSize="16sp"
                android:translationY="-1.69sp" />

            <EditText
                android:id="@+id/nameprofile"
                android:layout_width="283dp"
                android:layout_height="40dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/rectangle"
                android:ems="10"
                android:fontFamily="@font/roboto"
                android:hint="Enter Your Name"
                android:inputType="textPersonName"
                android:paddingStart="20dp"
                android:textSize="16sp"
                tools:ignore="TouchTargetSizeCheck" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/field_lable3"
                android:layout_width="165dp"
                android:layout_height="18dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/roboto"
                android:gravity="top"
                android:lineSpacingExtra="3sp"
                android:text="Date of Birth"
                android:textSize="16sp"
                android:translationY="-1.69sp" />

            <EditText
                android:id="@+id/dob"
                android:layout_width="283dp"
                android:layout_height="40dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/rectangle"
                android:ems="10"
                android:fontFamily="@font/roboto"
                android:hint="Enter Your Date of Birth"
                android:inputType="date"
                android:paddingStart="20dp"
                android:textSize="16sp"
                tools:ignore="TouchTargetSizeCheck" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/field_lable4"
                android:layout_width="165dp"
                android:layout_height="18dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/roboto"
                android:gravity="top"
                android:lineSpacingExtra="3sp"
                android:text="Mobile Number"
                android:textSize="16sp"
                android:translationY="-1.69sp" />

            <TextView
                android:id="@+id/phone"
                android:layout_width="283dp"
                android:layout_height="40dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/rectangle"
                android:fontFamily="@font/roboto"
                android:gravity="center_vertical"
                android:paddingStart="20dp"
                android:text="1234567890"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/field_lable5"
                android:layout_width="165dp"
                android:layout_height="18dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/roboto"
                android:gravity="top"
                android:lineSpacingExtra="3sp"
                android:text="Mail - ID"
                android:textSize="16sp"
                android:translationY="-1.69sp" />

            <EditText
                android:id="@+id/Email"
                android:layout_width="283dp"
                android:layout_height="40dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/rectangle"
                android:ems="10"
                android:fontFamily="@font/roboto"
                android:hint="Enter Your Email-ID"
                android:inputType="textEmailAddress"
                android:paddingStart="20dp"
                android:textSize="16sp"
                tools:ignore="TouchTargetSizeCheck" />
        </LinearLayout>

        <Button
            android:id="@+id/saveprofile"
            android:layout_width="283dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="Create Profile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/by_continui" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>